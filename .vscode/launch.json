{
    // config file to start the apps faster in vscode.
    // should work if cloned. 
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "ApplicareApplication",
            "request": "launch",
            "mainClass": "com.applicare.applicare.ApplicareApplication",
            "projectName": "applicare"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "pplicare_frontend",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/applicare_frontend"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "applicare_backend",
            "command": "mvn spring-boot:run",
            "cwd": "${workspaceFolder}/applicare_backend"
        }
    ]
}
